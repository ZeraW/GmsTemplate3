<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="9dp">
    <LinearLayout
        android:id="@+id/Service_linear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="10"
        android:background="@color/Service02"
        >
        <ImageView
            android:id="@+id/Service_IMG"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@color/Service01"
            android:scaleType="centerInside"
            />
        <TextView
            android:id="@+id/Service_TXT"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Music and video production"
            android:textSize="19sp"
            android:textColor="@android:color/white"
            android:layout_gravity="center"
            android:layout_weight="9"
            android:gravity="center|left"
            android:paddingLeft="10dp"


            />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/left_arrow1"
            android:scaleType="centerInside"
            android:layout_marginRight="5dp"
            android:textSize="30sp"

            />

    </LinearLayout>
        
    </android.support.v7.widget.CardView>


