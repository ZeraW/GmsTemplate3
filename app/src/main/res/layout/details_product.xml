<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:orientation="vertical"
    tools:context="com.digitalsigma.vacationcruise.Activity.Details.DetailsProduct"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/DetailsIMG_Product"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/DetailsDesc_Product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/DetailsIMG_Product"
            android:padding="20dp"
            android:textSize="15sp" />

        <ImageButton
            android:id="@+id/googleplayURL"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/DetailsDesc_Product"
            android:layout_gravity="right"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            android:src="@drawable/google_play" />

    </RelativeLayout>


</ScrollView>
